#!/bin/bash
echo print contents 
tail -10 ~/.ssh/authorized_keys
echo

echo append to ssh
sudo chmod 754 ~/.ssh/authorized_keys
sudo echo $mykey >> sudo ~/.ssh/authorized_keys
echo

echo print new contents 
tail -10 ~/.ssh/authorized_keys
echo

echo add urser
sudo useradd david -p 123456
echo

echo all users
cat /etc/passwd
echo

echo restart ssh
sudo service ssh reload
echo
echo end

