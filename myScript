#!/bin/bash

echo add urser
sudo useradd david -p 123456
echo

echo all users
cat /etc/passwd
echo

echo print contents 
tail -10 /etc/ssh/sshd_config

echo append to ssh
sudo echo "
Port 45454 
PermitRootLogin no 
AllowUsers david" >> /etc/ssh/sshd_config
echo

echo print new contents 
tail -10 /etc/ssh/sshd_config
echo

echo restart ssh
sudo service ssh reload
echo
echo end

